 <div class = " dropdown_wrapper">
	<%=form_tag(users_path, :method => 'get', :multipart => true) do %>		
		<%= select_tag(:cardview, options_for_select([
			[3,'3'],
			[6,'6'],
			[9,'9'],
			[12,'12'],
			[15,'15'],
			[18,'18']
			], :selected => params[:cardview], :class => "dropdown"  ))%>
		<%= submit_tag 'Go!', :class => "all-btn drop" %>
	<%end%>
</div>
<%= render "/users/randomfaces" %>

<script>
	$(window).load(function(){
	 $('.cont').find('img').each(function(){
	  var imgClass = (this.width/this.height > 1) ? 'wide' : 'tall';
	  $(this).addClass(imgClass);
	 })
	})
</script>


