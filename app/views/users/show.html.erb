
<%#= image_tag @user.avatar.url %>
<%#= image_tag @user.avatar.url(:medium) %>
<%#= @user.name%>
<div class="row-fluid myevents">
  <div class="span2 myface"><%= image_tag @user.picture_url %></div>
  <div class="span6"><h4 class = "page_title adj"> 's event listing </h4></div>
</div>
<div class = "container">
	<ul class = "thumbnails">
		<% @user.events.each do |t|%>
			<li class = "span12 listed">
				<div class = "row-fluid">
					<div class = "span12">
						<div class = "row-fluid">
							<div class = "span3">
								<div class = "event_icon">
									<div class = "cont">
										<img class = "event_avatar" src= "<%= t.avatar%>">
									</div>
								</div>
							</div>
							<div class = "listed-inner">
								<p class = "event_title"><%= t.title %></p>
								<p class = "event_description"><%= t.description %></p>
							</div>
							<ul class = "listed-action">
								<li class = "action left">
									<%= link_to "", event_path(t.id), class: "action play" %>
								</li>
								<li class = "action right">
								<% if @user == current_user %>
									<%= link_to "",  {:controller => :events,
																:action => 'remove_event_from_user',
																:current_user => @user,
																:event_title => t.title}, class: "action remove"%>
								<% end %>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</li>
		<% end %>
	</ul>
</div>	

